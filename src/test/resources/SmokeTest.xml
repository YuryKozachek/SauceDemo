<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="SauceDemo SmokeTest" thread-count="2" parallel="tests">
    <listeners>
        <listener class-name="retrysingletest.AnnotationTransformer"></listener>
    </listeners>
    <test name="Thread_1">
        <groups>
            <run>
                <include name="smoke"/>
            </run>
        </groups>
        <classes>
            <class name="tests.LoginTest"/>
        </classes>
    </test> <!-- Test -->
    <test name="Thread_2">
        <classes>
            <class name="tests.ProductsTest"/>
            <class name="tests.CartTest"/>
            <class name="tests.CompletedTest"/>
        </classes>
    </test> <!-- Test -->
</suite>